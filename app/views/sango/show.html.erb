          <div class='asaid-card'>
            <div class='header'>
              POPULAR
            </div>
            <div class='body'>
              <div class='ranking-container'>
                <div class='ranking'>
                  <div class='thumb'>
                    <%= image_tag('sango/light-mockup-min-160x160.jpg') %>
